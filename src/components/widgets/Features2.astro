---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import ItemGrid2 from '~/components/ui/ItemGrid2.astro';
import type { Features as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 3,

  id,
  isDark = true,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`}
  bg={bg ?? 'bg-black'}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      // CAMBIO: Simplificado para que title y subtitle usen los estilos globales.
      // Solo se personaliza el tagline para que tambiÃ©n sea dorado.
      tagline: 'text-primary uppercase tracking-widest text-sm text-center mb-2',
      ...((classes?.headline as Record<string, string>) ?? {}),
    }}
  />

  <ItemGrid2
    items={items}
    columns={columns}
    classes={{
      container: 'gap-6 md:gap-10',
      // CAMBIO: Se usan variables del tema (primary) en lugar de colores fijos
      panel:
        'rounded-2xl bg-gradient-to-b from-black to-neutral-900 border border-primary/30 shadow-lg hover:shadow-primary/20 transition-all duration-300 p-8 text-center',

      // CAMBIO: Se eliminaron 'title' y 'description' para que hereden los estilos globales
      ...((classes?.items as Record<string, never>) ?? {}),
    }}
  />
</WidgetWrapper>
